[user]
	name = Samuel Fabrizio
	email = samuelfabrizio@gmail.com
[color]
    ui = auto

[alias]
    lg = log --color --graph --pretty=format:'%Cred%h%Creset-%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    a = add
    ap = add -p
    au = add -u
    apu = add -p -u
    l = !git --no-pager log -n50 --reverse 
    ls = !git --no-pager log -n20 --reverse --stat 
    c = commit
    s = status
    st = status
    cl = clone
    df = !git --no-pager diff
    dfc = !git --no-pager diff --cached
    pullr = pull --rebase
    co = checkout
    st = status
    sa = stash
    sal = stash list
    sap = stash pop
    sad = stash drop
    br = branch
    rh = reset HEAD
    sh = show
    cam = commit --amend

[core]
	editor = nvim
	excludesfile = ~/dotfiles/gitignore

[push]
	default = simple
